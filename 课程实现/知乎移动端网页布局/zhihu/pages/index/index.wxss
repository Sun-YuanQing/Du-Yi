.test {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.search {
  width: 100%;
  height: 65rpx;
  background: #2a8ce5;
  display: flex;
  padding: 12.5rpx 0 12.5rpx 15rpx;
}

.search .search-left {
  width: 85%;
  background: #4ea3e7;
}

.search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.search .search-left input {
  display: inline-block;
  width: 65rpx;
  font-size: 26rpx;
}
.search .search-right {
  width: 15%;
  outline: 1px solid
}
.search .search-right image {
  width: 45rpx;
  height: 45rpx;
  left:0rpx; right:0rpx;
  margin:auto;
}

.search-placeholder {
  color: #8ccefd;
  line-height: 20rpx;
}

.feed-item {
  width: 100%;
  background: #fff;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0;
  box-sizing: 50rpx;
}

.feed-item .feed-source {
  width: 100%;
  height: 50rpx;
}

.feed-item .feed-source .avatar {
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  vertical-align: middle;
}

.feed-item .feed-source .text {
  width: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  font-size: 26rpx;
  color: #a0acac;
}

.feed-item .feed-source .item-more {
  width: 45rpx;
  height: 45rpx;
  margin-left: 350rpx;
  vertical-align: middle;
}

.feed-content {
  width: 100%;
  padding: 10rpx 0 0 0;
}

.feed-content .question {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 70rpx;
}

.feed-content .avatar-text {
  padding: 10rpx 0 0;
  color: gray;
}

.answer-actions text {
  color: #a0acac;
  font-size: 24rpx;
  padding: 15rpx 0;
}

.answer-actions .dot::after {
  content: "-";
  padding: 0 10rpx;
}
